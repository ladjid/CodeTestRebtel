<div ng-controller="BookShelfCtrl">
    <div>
        <table class="table table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Loaned To</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="book in books">
                    <td>{{book.Title}}</td>
                    <td>{{book.Author}}</td>
                    <td>{{book.ISBN}}</td>
                    <td>{{book.LoanedTo}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
